<odoo>
    <data>

        <record model="ir.actions.act_window" id="suceso_list_action">
            <field name="name">A acci√≥n con suceso</field>
            <field name="res_model">odoo_basico.suceso</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Tes que crear o primeiro rexistro</p>
            </field>
        </record>

        <record model="ir.ui.view" id="suceso_tree_view">
            <field name="name">suceso.form</field>
            <field name="model">odoo_basico.suceso</field>
            <field name="arch" type="xml">
                <tree string="Formulario para suceso" editable ="top" decoration-success="nivel == 'Baixo'" decoration-warning="nivel == 'Medio'" decoration-danger="nivel == 'Alto'">
                    <field name="name"/>
                    <field name="descripcion"/>
                    <field name="nivel"/>
                    <field name="data_hora"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>